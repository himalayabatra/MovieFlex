<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IS7024_FinalProj_MovieFlex</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IS7024_FinalProj_MovieFlex.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="logo-text col-sm-2">
                    <a asp-page="/Index"> <img src="/images/Logo.png" width="200" height="100"/></a>
                </div>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm ml-auto col-sm-10">
                    <div class="container">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Top250Movies">Top 250 Movies</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="">Top 250 Shows</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="">Now Showing</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/contact">Contact Us</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        
    </header>
    <div class="mainSection">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="Trending" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="./DoctorStrange.jpg" class="d-block w-100" height="500" alt="...">
            </div>
            <div class="carousel-item">
                <img src="./Black-Panther-Wakanda-Forever.webp" class="d-block w-100" height="500" alt="...">
            </div>
            <div class="carousel-item">
                <img src="./BlackAdam.jpg" class="d-block w-100" height="500" alt="...">
            </div>
            <div class="carousel-item">
                <img src="./Houseofthedragon.jpg" class="d-block w-100" height="500" alt="...">
            </div>
            <div class="carousel-item">
                <img src="./ThePeripheral.jpg" class="d-block w-100" height="500" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="consultation row">
                <span style="color:white; font-size:20px; line-height: revert;" class="col-md-4">Have any feedback? Let Us Know!</span>
                <a class="btn btn-primary col-md-1 contactBtn" style="" asp-area="" asp-page="/contact">Contact Us</a>
                <div class="social-media-links col-md-5" style="float:right;">
                    <ul class="social-links-list">
                        <li class="social-1">
                            <a href="https://www.facebook.com" target="_blank" class="fa fa-facebook"></a>
                        </li>
                        <li class="social-2">
                            <a href="#" class="fa fa-twitter"></a>
                        </li>
                        <li class="social-3">
                            <a href="#" class="fa fa-linkedin"></a>
                        </li>
                        <li class="social-4">
                            <a href="https://www.instagram.com" target="_blank" class="fa fa-instagram"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
