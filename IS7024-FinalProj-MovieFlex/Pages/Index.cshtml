@page
@model IndexModel
@using MovieFlex;
@{
    ViewData["Title"] = "Home page";
    List<Result> searchResults = (List<Result>) ViewData["searchResult"];
}

<div class="text-center">
    <div class="bannerContainer">
        <div class="container">
            <form action="" method="get" class="searchBox">
                <input asp-for="searchString" type="text" placeholder="Search Movies" />
                <input type="submit" value="Search" class="submitBtn" />
            </form> 
        </div>
    </div>

    @if (Model.SearchCompleted)
    {
        <div class="container" id="searchResultContainer">
            <h1> Movie List Based on your Search</h1>
            <table class="table table-dark table-striped">
                @if ((searchResults != null) && (searchResults.Any()))
                {
                    foreach (Result movie in searchResults)
                    {
                        <tr>
                            <td>
                                <div class="row">
                                    <div class="col-md-6">
                                        <img src="@movie.Image" width="200" height="300">
                                    </div>
                                    <div class="col-sm-6">
                                        @movie.Title <br/>
                                        @movie.Description
                                    </div>

                                </div>
                                
                            </td>
                        </tr>
                    }
                    <script>
                        document.getElementById('searchResultContainer').scrollIntoView({
                            behavior: 'smooth'
                        });
                    </script>
                }
            </table>
        </div>
    }
   
</div>
<div id="Trending" class="carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="./images/doctorstrange.png" class="d-block w-100" height="500" alt="...">
        </div>
        <div class="carousel-item">
            <img src="./images/houseofdragons.png" class="d-block w-100" height="500" alt="...">
        </div>
        <div class="carousel-item">
            <img src="./images/blackadam.png" class="d-block w-100" height="500" alt="...">
        </div>
        <div class="carousel-item">
            <img src="./images/Peripheral.png" class="d-block w-100" height="500" alt="...">
        </div>
        <div class="carousel-item">
            <img src="./images/Avatar_(2009_film)_poster.jpg" class="d-block w-100" height="500" alt="...">
        </div>
        <div class="carousel-item">
            <img src="./images/Black-Panther-Wakanda-Forever.jpg" class="d-block w-100" height="500" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
