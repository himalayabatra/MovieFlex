@page
@using MovieShows
@model IS7024_FinalProj_MovieFlex.Pages.ContactUsModel
@{
    ShowingMovies movielist = (ShowingMovies)ViewData["Show_movie_list"];
}

<head>
 <style>
     h1 {

         text-align:center;
         
     }   
     body {
            margin: 0;
            background-color: crimson  ;
            user-select: none;
            font-family: sans-serif;
        
     }

      

        .table {

            text-align:center;
        }
            input[type=radio]:nth-child(5) {
                margin-right: 0px;
            }

            input[type=radio]:checked {
                opacity: 1;
            }


            </style>
</head>
<body>
    <h1>Now Showing</h1>

    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <style>
                h5 {
                    color: black
                }
            </style>
            <div class="carousel-item active">
                <div class="container">
                    <div class="row">
                        <div class="col-sm col-xs-12">
                            <div class="card">
                                <img src="https://s3.amazonaws.com/sfc-datebook-wordpress/wp-content/uploads/sites/2/2022/10/MER172218813404e8465b4b59574455a_blackadam1020-scaled.jpg" width="100%" height="225" />
                            </div>
                        </div>
                        <div class="col-sm col-xs-12">
                            <div class="card">
                                <img src="https://upload.wikimedia.org/wikipedia/en/4/44/One_Piece_Film_Red_Visual_Poster.jpg" width="100%" height="225" />

                            </div>
                        </div>

                        <div class="col-sm col-xs-12">
                            <div class="card">
                                <img src="https://i0.wp.com/bloody-disgusting.com/wp-content/uploads/2022/09/SMILE.jpeg?ssl=1" width="100%" height="225" />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container">
                    <div class="row">
                        <div class="col-sm col-xs-12">
                            <div class="card">
                                <img src="https://assets-prd.ignimgs.com/2022/07/14/prey-for-the-devil-button-1-1657822607082.jpg" width="100%" height="225" />
                            </div>
                        </div>
                        <div class="col-sm col-xs-12">
                            <div class="card">
                                <img src="https://i0.wp.com/www.irishfilmcritic.com/wp-content/uploads/2022/06/Lyle-Lyle-Crocodile-1.jpg?fit=1392%2C696&ssl=1" width="100%" height="225" />

                            </div>
                        </div>
                        <div class="col-sm col-xs-12">
                            <div class="card">
                                <img src="https://pics.filmaffinity.com/The_Banshees_of_Inisherin-610526202-large.jpg" width="100%" height="225" />

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container">
                    <div class="row">
                        <div class="col-sm col-xs-12">
                            <div class="card">
                                <img src="https://static.metacritic.com/images/products/movies/8/906e5b156d2b22291ddc3060fd0fb80e.jpg" width="100%" height="225" />

                            </div>
                        </div>
                        <div class="col-sm col-xs-12">
                            <div class="card">
                                <img src="https://crypticrock.com/wp-content/uploads/2022/10/terrifer-2-slide.jpg" width="100%" height="225" />

                            </div>
                        </div>
                        <div class="col-sm col-xs-12">
                            <div class="card">
                                <img src="https://dx35vtwkllhj9.cloudfront.net/universalstudios/ticket-to-paradise/images/regions/us/updates/header.jpg" width="100%" height="225" />

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <br />
            <br />
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class= "table">
    <table class="table table-hover">
    <tr>
        
        <th>Now Showing</th>
     
    </tr>
    @{

        foreach (Item item in movielist.Items)
        {
                   <tr>
                   
                    <td>@item.Title </td>
                   </tr>
        }
    }
</table>
</div>    
   
</body>
    


