<div class="container">

    <h1 class="sub-heading">Now Showing</h1>
    @{

        foreach (Item item in movielist.Items)
        {
                   <div class="card movie-card" style="width: 18rem; height:32rem;">
                <div class="movie-img-container"><img src="@item.Image" class="card-img-top movie-card-img" alt="image of @item.Title" style="width: 18rem; height:20rem;"></div>
                            <div class="card-body">
                                <h2>@item.Title</h2>
                    Gross: @item.Gross <br />

                            </div>
                        </div>
        }
    }
</div>    
    


