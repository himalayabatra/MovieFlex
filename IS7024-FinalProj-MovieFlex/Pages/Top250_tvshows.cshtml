@page
@model IS7024_FinalProj_MovieFlex.Pages.Top250_tvshowsModel
@using Shows
@{
    ViewData["Title"] = "MovieFlex Top 250 Shows";
    Tvshows tvshows = (Tvshows)ViewData["Tvshows"];
}

<div class="text-center container">
    <h1 class="sub-heading">Top 250 Shows</h1>
    <table id="shows-datatable" class="table table-dark table-striped table-responsive">
        <caption>List of Top 250 Tv shows</caption>
        <thead>
        <tr>
            <th></th>
            <th class="align-initial">Rank & Title</th>
            <th>Release Year</th>
            <th>Rating</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (Item item in tvshows.Items)
            {
                <tr>
                        <td><img src="@item.Image" width="100" height="100" alt="poster of @item.Title" /></td>
                    <td class="align-initial"><span>@item.Rank . </span>@item.Title</td>
                    <td>@item.Year</td>
                    <td>@item.ImDbRating</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>